<html lang="en">
<%- include('./partials/head.ejs') %>
<body>

<%- include('./partials/nav.ejs') %>
   

    <div id="for-info">
        <p class="info">Welcome to <b>BLOGGER</b>, your number one information site. Click on the news you wish to read to take you to the details</p>
    </div>

   <div class="blogs content">
       <h2>All Blogs</h2>
    <!-- What to do if our array is empty or not -->
    <% if(blog.length > 0) { %>
        <% blog.forEach(blog => { %>
            <a class="single" href="/blogs/<%-blog._id %>">
            <h3 class="title"><%= blog.title %></h3>
            <!-- <p class="snippet"><%= blog.snippet %></p> -->
        </a>
       <% }) %>
        <% }else{ %>
            <p>There are no blogs to display....</p>
       <% } %>


   </div>
   <%- include('./partials/footer.ejs') %>

   
</body>
</html>